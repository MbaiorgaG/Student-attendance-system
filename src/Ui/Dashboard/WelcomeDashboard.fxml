<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="welcome_dashboard" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Ui.Dashboard.WelcomeDashboardController">
    <children>
        <Label fx:id="Welcome" alignment="CENTER" contentDisplay="CENTER" prefHeight="59.0" prefWidth="630.0" text="Current Stats" textAlignment="CENTER" VBox.vgrow="ALWAYS">
            <font>
                <Font name="SF Compact Display Bold" size="30.0" />
            </font>
        </Label>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox layoutX="15.0" layoutY="15.0" prefWidth="250.0" styleClass="stats" stylesheets="@../StyleCheet/style.css">
                    <children>
                        <HBox fx:id="enroll_card" alignment="CENTER"  prefHeight="120.0" style="-fx-background-color: #2980b9;" styleClass="top_stats" stylesheets="@../StyleCheet/style.css">
                        </HBox>
                        <HBox fx:id="enroll_student" alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #303952" styleClass="bottom_stats">
                     <children>
                        <JFXButton onAction="#enrollStudent"  style="-fx-background-color: #303952" text="Enroll Student" textFill="#dddbdb">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </JFXButton>
                     </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox layoutX="15.0" layoutY="15.0" prefWidth="250.0" style="-fx-border-radius: 100px;" styleClass="stats" stylesheets="@../StyleCheet/style.css">
                    <children>
                        <HBox fx:id="vieiw_stu_card" alignment="CENTER" prefHeight="120.0" style="-fx-background-color: #2980b9;" styleClass="top_stats" stylesheets="@../StyleCheet/style.css">
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #303952;" styleClass="bottom_stats">
                            <children>
                                <Label fx:id="view_student"  text="View Students" textFill="#dddbdb">
                                    <font>
                                        <Font name="SF Compact Display Regular" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox layoutX="30.0" layoutY="15.0" prefWidth="250.0" style="-fx-border-radius: 100px;" styleClass="stats" stylesheets="@../StyleCheet/style.css">
                    <children>
                        <HBox fx:id="start_attendance_card" alignment="CENTER"  prefHeight="120.0" style="-fx-background-color: #2980b9;" styleClass="top_stats" stylesheets="@../StyleCheet/style.css">
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #303952;" styleClass="bottom_stats">
                            <children>
                                <Label fx:id="start_attendance"  text="Start Attendance" textFill="#dddbdb">
                                    <font>
                                        <Font name="SF Compact Display Regular" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>

        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox layoutX="15.0" layoutY="15.0" prefWidth="250.0" style="-fx-border-radius: 100px;" styleClass="stats" stylesheets="@../StyleCheet/style.css" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox fx:id="add_course_card" alignment="CENTER"  prefHeight="120.0" style="-fx-background-color: #2980b9;" styleClass="top_stats" stylesheets="@../StyleCheet/style.css">
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="80.0" spacing="5.0" style="-fx-background-color: #303952;" styleClass="bottom_stats">
                            <children>
                                <Label fx:id="add_course"  prefHeight="23.0" prefWidth="107.0" text="Add Course" textFill="#dddbdb">
                                    <font>
                                        <Font name="SF Compact Display Regular" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox layoutX="15.0" layoutY="15.0" prefWidth="250.0" style="-fx-border-radius: 100px;" styleClass="stats" stylesheets="@../StyleCheet/style.css" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox fx:id="view_course_card" alignment="CENTER"  prefHeight="120.0" style="-fx-background-color: #2980b9;" styleClass="top_stats" stylesheets="@../StyleCheet/style.css">

                        </HBox>
                        <HBox alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #303952;" styleClass="bottom_stats">
                            <children>
                                <Label fx:id="view_course" text="View Course" textFill="#dddbdb">
                                    <font>
                                        <Font name="SF Compact Display Regular" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox layoutX="15.0" layoutY="15.0" prefWidth="250.0" style="-fx-border-radius: 100px;" styleClass="stats" stylesheets="@../StyleCheet/style.css" HBox.hgrow="ALWAYS">
                    <children>
                        <HBox fx:id="student_report_card" alignment="CENTER" prefHeight="120.0" style="-fx-background-color: #2980b9;" styleClass="top_stats" stylesheets="@../StyleCheet/style.css">

                        </HBox>
                        <HBox alignment="CENTER" prefHeight="80.0" spacing="10.0" style="-fx-background-color: #303952;" styleClass="bottom_stats">
                            <children>
                                <Label fx:id="stud_report" text="Report" textFill="#dddbdb">
                                    <font>
                                        <Font name="SF Compact Display Regular" size="18.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets top="-150.0" />
    </padding>
</VBox>
